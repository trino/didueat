<?php
    printfile("views/dashboard/credit_cards/ajax/list.blade.php");
    $encryptedfields = array("card_number", "expiry_date", "expiry_month", "expiry_year", "ccv");
?>

<?php if(\Session::has('message')): ?>
    <?php echo message_show("Message!", \Session::get('message')); ?>

<?php endif; ?>

<div class="card">
    <div class="card-header ">
        <div class="row">
            <div class="col-lg-9">
                <h4 class="card-title">
                    Credit Card (<?php echo e(ucwords($type)); ?>)
                    <button type="button" class="btn btn-primary btn-sm" id="addNew" data-toggle="modal" data-target="#editModel">
                        Add
                    </button>
                </h4>

                <?php if($type == "restaurant"): ?>
                <!--p class="card-subtitle text-muted">
                    Your credit card will be billed on the 1st of each month.
                </p-->
                <?php endif; ?>

            </div>

            <?php if(false): ?>
                <?php echo $__env->make('common.table_controls', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
            <?php endif; ?>
        </div>
    </div>

    <div class="card-block p-a-0">
        <table class="table table-responsive m-b-0">

            <?php if(Session::get('session_type_user') == "super"  && $recCount > 10): ?>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Card Type</th>
                        <th>Card Number</th>
                        <th>Expiry Date</th>
                        <th></th>
                    </tr>
                </thead>
            <?php endif; ?>

            <tbody>
                <?php if($recCount > 0): ?>
                    <?php foreach($Query as $key => $value): ?>
                        <?php
                            foreach ($encryptedfields as $field) {
                                if (is_encrypted($value->$field)) {
                                    $value->$field = \Crypt::decrypt($value->$field);
                                }
                            }
                        ?>
                        <tr class="rows" data-id="<?php echo e($value->id); ?>" data-order="<?php echo e($key); ?>">
                            <td><?php echo e($value->first_name.' '.$value->last_name); ?></td>
                            <td><?php echo e($value->card_type); ?></td>
                            <td><?php echo e(obfuscate($value->card_number)); ?></td>
                            <td><?php echo e($value->expiry_month); ?>/<?php echo e(right($value->expiry_year,2)); ?></td>
                            <td>
                                <div class="pull-right">
                                    <!--a data-id="<?php echo e($value->id); ?>" class="btn btn-info btn-sm editRow" data-toggle="modal" data-target="#editModel">
                                        Edit
                                    </a-->
                                    <a href="<?php echo e(url('credit-cards/delete/'.$value->id."/".$type)); ?>"
                                       class="btn btn-secondary-outline btn-sm "
                                       onclick="return confirm('Are you sure you want to delete this card:  <?php echo e(addslashes("'" . $value->card_number . "'")); ?> ?');"><i class="fa fa-times"></i></a>
                                </div>
                            </td>

                        </tr>
                    <?php endforeach; ?>
                <?php else: ?>
                    <tr>
                        <td><span class="text-muted">No Credit Cards </span></td>
                    </tr>
                <?php endif; ?>
            </tbody>
        </table>
    </div>

    <?php if(Session::get('session_type_user') == "super"  && $recCount > 10): ?>
    <div class="card-footer clearfix">
        <?php echo $Pagination; ?>    </div>
    <?php endif; ?>
</div>