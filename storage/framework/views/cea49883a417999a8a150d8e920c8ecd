                            <?php if($order->order_type > 0 && $CanApprove): ?>
                                <?php echo $__env->make("common.gmaps", array("address" => $restaurant->formatted_address), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
                            <?php endif; ?>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-md-6">
                            <?php if($order->paid): ?>
                                This order has been paid for
                            <?php else: ?>
                                <?php echo $__env->make("home.stripe", array("orderID" => $order->id, "invoiceCents" => $order->g_total * 100, "salesTax" => $order->tax * 100, "orderDesc" => $order->guid), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
                            <?php endif; ?>
                        </div>
                        <div class="clearfix"></div>

