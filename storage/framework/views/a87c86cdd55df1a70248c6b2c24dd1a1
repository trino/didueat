<?php
    printfile("views/dashboard/profiles_address/ajax/list.blade.php");
    $alts = array(
            "addnew" => "Create a new address",
            "moveup" => "Move this address up 1 spot",
            "movedown" => "Move this address down 1 spot",
            "edit" => "Edit this address",
            "delete" => "Delete this address"
    );
?>

<?php if(\Session::has('message')): ?>
    <?php echo message_show("Message!", \Session::get('message')); ?>

<?php endif; ?>

<div class="card">
    <div class="card-header ">
        <div class="row">
            <div class="col-lg-9">
                <h4 class="card-title">
                    Delivery Address
                    <a class="btn btn-primary btn-sm addNew" title="<?php echo e($alts["addnew"]); ?>" id="addNew" data-toggle="modal" data-addOrEdit="add" data-target="#editModel">Add</a>
                </h4>
            </div>
            <?php if(Session::get('session_type_user') == "super" && $recCount > 10): ?>
                <?php echo $__env->make('common.table_controls', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
            <?php endif; ?>
        </div>
    </div>


    <div class="card-block p-a-0">
        <table class="table table-responsive m-b-0">
            <?php if(Session::get('session_type_user') == "super" && $recCount > 10): ?>
                <thead>
                    <tr>
                        <?php if($recCount > 1): ?>
                            <th>ID</th>
                        <?php endif; ?>
                        <th>Location</th>
                        <th>Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
            <?php endif; ?>
            <tbody>
            <?php if($recCount > 0): ?>
                <?php foreach($Query as $key => $value): ?>
                    <tr class="rows" data-id="<?php echo e($value->id); ?>" data-order="<?php echo e($key); ?>" id="address<?php echo e($value->id); ?>">
                        <?php if($recCount > 1): ?>
                            <td style="min-width: 100px;"><?php echo e($key+1); ?>

                                <div class="btn-group-vertical">
                                    <a class="btn btn-secondary-outline up btn-sm" title="<?php echo e($alts["moveup"]); ?>"><i class="fa fa-arrow-up"></i></a>
                                    <a class="btn btn-secondary-outline down btn-sm" title="<?php echo e($alts["movedown"]); ?>"><i class="fa fa-arrow-down"></i></a>
                                </div>
                            </td>
                        <?php endif; ?>

                        <td>
                            <?php
                                (isset($value->apartment) && strlen($value->apartment) > 0) ? $aptV = "Apt " . $value->apartment . ", " : $aptV = "";
                                if (isset($value->notes) && $value->notes!='') {
                                    echo '<b>' . $value->notes . '</b><br>';
                                }
                            ?>
                            <?php echo e($value->address . ', ' . $aptV . $value->city . ', ' . $value->province . ', ' . $value->postal_code); ?>

                        </td>

                        <td>
                            <div class="btn-group">
                            <button data-id="<?php echo e($value->id); ?>" data-user_id="<?php echo e($value->user_id); ?>" data-addOrEdit="edit" class="btn btn-secondary-outline editRow btn-sm" data-toggle="modal"
                               data-target="#editModel" title="<?php echo e($alts["edit"]); ?>"><strong>Edit</strong></button>
                            <!--A href="<?php echo e(url('user/addresses/delete/' . $value->id)); ?>"
                               class="btn btn-secondary-outline btn-sm"
                               onclick="return confirm('Are you sure you want to delete <?php echo e(addslashes($value->address)); ?>?');"><i class="fa fa-times"></i></A>
                            </div-->
                                <A class="btn btn-secondary-outline btn-sm" title="<?php echo e($alts["delete"]); ?>"
                                   onclick="deleteaddress('<?php echo e($value->id); ?>', '<?php echo e(addslashes($value->address)); ?>');">
                                    <i id="delete<?php echo e($value->id); ?>" class="fa fa-times"></i>
                                </A>
                            </div>
                        </td>

                    </tr>
                <?php endforeach; ?>
            <?php endif; ?>
            <tr ID="noaddresses" <?php if($recCount > 0): ?> style="display: none;" <?php endif; ?> >
                <td><span class="text-muted">No delivery addresses</span></td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<SCRIPT>
    var Addresses = '<?php echo e($recCount); ?>';
    function deleteaddress(ID, Name){
        if(confirm('Are you sure you want to delete address "' + Name + '"?')) {
            $("#delete" + ID).attr('class', "fa fa-spinner fa-spin");
            $.post("<?php echo e(url('user/addresses/delete')); ?>/" + ID, {_token: "<?php echo e(csrf_token()); ?>"}, function (result) {
                Addresses=Addresses-1;
                $("#address" + ID).fadeOut();
                if(Addresses == 0) {
                    $("#noaddresses").fadeIn();
                }
            });
        }
    }
</SCRIPT>